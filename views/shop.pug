extends layouts/main-layout.pug

block content
    main 
        if prods.length  > 0 
            .grid  
                each product in prods
                    article.cad.product-item 
                        header.card-header 
                            h1.product__title #{product.title} 
                        div.card__image
                            img(src="", alt="img")
                        div.card__content
                            h2.product__price  $19.99
                            p.product__description Static text 
                        div.card__action
                            button.btn Add to Cart 
        else 
            h1 no products 
block styles 
    link(rel="stylesheet", href="/css/product.css")

            